@using Microsoft.AspNetCore.Identity
@using ExerciseTrackingAnalytics.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Home Page";
    var accessToken = ViewBag.AccessToken as string;
}

<div class="row mb-4">
    <div class="col text-center">
        <h1 class="display-4">Welcome to Exercise Tracking Analytics</h1>
    </div>
</div>

<div class="row">
    <div class="col">
        @if (SignInManager.IsSignedIn(User))
        {
            <div>You are logged in using Strava.  Yay!</div>

            @if (ViewBag.AuthProperties != null)
            {
                <h4>Authentication Properties</h4>

                <dl>
                    @foreach (var prop in ViewBag.AuthProperties)
                    {
                        <dt>@prop.Key</dt>
                        <dd>@prop.Value</dd>
                    }
                </dl>
            }

            @if (accessToken != null)
            {
                <div>Access Token: @accessToken</div>
            }
        }
        else
        {
            <div><a href="~/Identity/Account/Login">Log in</a> to access your Strava data and see the reporting, analytics and insights.</div>
        }
    </div>

    <div class="col">
        <img src="~/images/woman_running_river_city_happy.jpeg" alt="Woman Running" style="width: 100%" />
    </div>
</div>
