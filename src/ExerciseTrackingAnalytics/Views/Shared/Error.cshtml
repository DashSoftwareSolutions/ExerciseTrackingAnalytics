@using System.Net
@using Microsoft.AspNetCore.WebUtilities
@using ExerciseTrackingAnalytics.ViewModels

@model ErrorViewModel

@{
    ViewData["Title"] = "Error";
}

<h1 class="text-danger">Error.</h1>
<h2 class="text-danger">An error occurred while processing your request.</h2>

<p style="margin: 33px 0">
@if (Model.StatusCode.HasValue)
{
    <strong>Status Code:</strong> @(Model.StatusCode.Value)@:&nbsp;@ReasonPhrases.GetReasonPhrase(Model.StatusCode.Value)
}

@if (!string.IsNullOrWhiteSpace(Model.ErrorMessage))
{
    <br />
    <strong>Error Message:</strong> @Model.ErrorMessage
}

@if (!string.IsNullOrWhiteSpace(Model.RequestId))
{
    <br />
    <strong>Request ID:</strong> <code>@Model.RequestId</code>
}
</p>

